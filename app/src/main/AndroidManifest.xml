<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Androidotpvertification">
        <activity
            android:name=".UserDetailsActivity"
            android:exported="false" />
        <!-- Other activities -->
        <activity
            android:name=".recipeDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".recipeSearchActivity"
            android:exported="false" />
        <activity
            android:name=".mealPlanActivity"
            android:exported="false" />
        <activity
            android:name=".goalAdjustmentActivity"
            android:exported="false" />
        <activity
            android:name=".weightTrackingActivity"
            android:exported="false" />
        <activity
            android:name=".mealCreationActivity"
            android:exported="false" />
        <activity
            android:name=".mealList"
            android:exported="false" />
        <activity
            android:name=".nutritionMonitorActivity"
            android:exported="false" />
        <activity
            android:name=".addGoal"
            android:exported="false" /> <!-- Start Activity (Set as the launch activity) -->
        <activity
            android:name=".StartActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Login and other activities -->
        <activity
            android:name=".Login"
            android:exported="false" />
        <activity
            android:name=".Register"
            android:exported="false" />
        <activity
            android:name=".update_goal"
            android:exported="false" />
        <activity
            android:name=".VerifyOTPActivity"
            android:exported="false"
            android:screenOrientation="unspecified"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".SendOTPActivity"
            android:exported="false"
            android:screenOrientation="unspecified"
            android:windowSoftInputMode="adjustResize" /> <!-- Main Activity (No longer the launch activity) -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="unspecified" />
        <activity
            android:name=".dashboard"
            android:exported="false" />
    </application>

</manifest>